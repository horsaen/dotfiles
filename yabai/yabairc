yabai -m rule --add app="^eqMac$" manage=off
yabai -m rule --add app="^Discord$" manage=off
yabai -m rule --add app="^RiotClient$" manage=off
yabai -m rule --add app="^League of Legends$" manage=off
yabai -m rule --add label="Firfox PIP" app="^Firefox$" title="^(Picture-in-Picture)$" manage=on
